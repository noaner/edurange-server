%h2 Change your password
%hr/
= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-horizontal', role: 'form', method: :put}) do |f|
  = devise_error_messages!
  %div.form-group
    = f.label :password, class: 'control-label col-md-3'
    %div.col-md-9
      = f.password_field :password, required: true, autofocus: true, class: 'form-control'
  %div.form-group
    = f.label :password_confirmation, class: 'control-label col-md-3'
    %div.col-md-9
      = f.password_field :password_confirmation, required: true, autofocus: true, class: 'form-control'
  %div.form-group
    %div.col-md-9.col-md-offset-3
      = f.submit 'Change my password', class: 'btn btn-primary'

